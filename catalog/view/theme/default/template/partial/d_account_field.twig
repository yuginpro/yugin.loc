{% if customer_groups %}
<div class="form-group required" style="display: {% if customer_groups|length > 1 %}block{% else %}none{% endif %};">
    <label class="{% if form %}col-sm-2{% endif %} control-label">{{entry_customer_group}}</label>
    <div class="{% if form %}col-sm-10{% endif %}">
        {% for customer_group in customer_groups %}
        <div class="radio">
            <label>
                <input type="radio" name="customer_group_id" value="{{customer_group.customer_group_id}}" {% if customer_group.customer_group_id == customer_group_id %}checked="checked"{% endif %} />
                {{customer_group.name}}
            </label>
        </div>
        {% endfor %}
    </div>
</div>
{% endif %}
{% include 'd_visualize/template/partial/d_name_field.twig' with {form:form} %}
<div class="form-group required">
    <label class="{% if form %}col-sm-2{% endif %} control-label" for="input-email">{{entry_email}}</label>
    <div class="{% if form %}col-sm-10{% endif %}">
        <input type="text" name="email" value="{{email}}" placeholder="{{entry_email}}" id="input-email" class="form-control" />
        {% if error_email %}
            <div class="text-danger">{{error_email}}</div>
        {% endif %}
    </div>
</div>
<div class="form-group required">
    <label class="{% if form %}col-sm-2{% endif %} control-label" for="input-telephone">{{entry_telephone}}</label>
    <div class="{% if form %}col-sm-10{% endif %}">
        <input type="text" name="telephone" value="{{telephone}}" placeholder="{{entry_telephone}}" id="input-telephone" class="form-control" />
        {% if error_telephone %}
            <div class="text-danger">{{error_telephone}}</div>
        {% endif %}
    </div>
</div>
<div class="form-group">
    <label class="{% if form %}col-sm-2{% endif %} control-label" for="input-fax">{{entry_fax}}</label>
    <div class="{% if form %}col-sm-10{% endif %}">
        <input type="text" name="fax" value="{{fax}}" placeholder="{{entry_fax}}" id="input-fax" class="form-control" />
    </div>
</div>
